<?xml version="1.0" encoding="utf-8"?>
<org.kilon.android.trainride.views.RideView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>

	<RelativeLayout
		android:padding="6sp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/ride_destination"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:text="North Berkeley"
			android:layout_marginLeft="0sp"
			android:ellipsize="end"
			android:textStyle="bold"
			android:singleLine="true"
		/>
			
		<TextView
			android:id="@+id/ride_time"
			android:layout_toRightOf="@id/ride_destination"
			android:paddingLeft="10sp"
			android:textSize="13sp" 
			android:text="11:23 | 11:45 | 11:59"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		/>	
		
		<RelativeLayout
			android:layout_width="fill_parent" 
			android:layout_height="15sp"
			android:layout_below="@id/ride_destination"
			android:id="@+id/ride_circles"
		/>

	</RelativeLayout>
	
	
</org.kilon.android.trainride.views.RideView>
